@model TravelTripApp.Models.Blog
@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <h2>Yeni Blog Ekleme</h2>
    <br />
    @using (Html.BeginForm("YeniBlog", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <br />
        @Html.LabelFor(x => x.Baslik)
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Baslik, "", new { @style = "color:red" })
        <br />
        @Html.LabelFor(x => x.Tarih)
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Tarih, "", new { @style = "color:red" })
        <br />
        @Html.LabelFor(x => x.BlogImage)
        @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.BlogImage, "", new { @style = "color:red" })
        <br />
        @Html.LabelFor(x => x.Aciklama)
        @Html.TextAreaFor(x => x.Aciklama,15,1, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Aciklama, "", new { @style = "color:red" })
        <br />
        <input type="submit" class="btn btn-primary" value="Blog Ekle"/>


    }

</body>
</html>