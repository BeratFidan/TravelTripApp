@using TravelTripApp.Models
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<iletisim>
@{
    ViewBag.Title = "iletisim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Mesajlar Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad Soyad</th>
        <th>Mail Adresi</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>SİL</th>
    </tr>
    @foreach (var item in Model)
    {


        <tr>
            <td>@item.ID</td>
            <td>@item.AdSoyad</td>
            <td>@item.Mail</td>
            <td>@item.Konu</td>
            <td>@item.Mesaj</td>
            <td><a href="/Admin/MesajSil/@item.ID" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))



