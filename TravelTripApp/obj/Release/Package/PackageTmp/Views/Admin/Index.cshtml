@using TravelTripApp.Models
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var item in Model)
    {


    <tr>
        <td>@item.ID</td>
        <td>@item.Baslik</td>
        <td><a href="/Admin/Sil/@item.ID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/BlogGetir/@item.ID"class="btn btn-warning">Güncelle</a></td>
    </tr>
    }
</table>
<a href="/Admin/YeniBlog" class="btn btn-primary"> Yeni Blog</a>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index", new { sayfa}))

