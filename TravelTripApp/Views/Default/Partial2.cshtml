@using TravelTripApp.Models
@model List<Blog>

@foreach (var item in Model)
{

    <div class="right">
        <div class="bot-left">
            <img src="@item.BlogImage"style="width:250px; height:160px;" alt="" />
        </div>
        <div class="left-text">

            <h4>@item.Baslik</h4>
            <span class="doller">Eklenme Tarihi: @item.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@item.Aciklama.Substring(0, 80)</p>
            <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>
}
